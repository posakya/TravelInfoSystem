<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
android:orientation="horizontal"
            android:layout_width="375dp"
            android:layout_height="40dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Number      : "
                android:textStyle="bold"
                android:textSize="16dp"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Number      "
                android:id="@+id/txt_bus_number"
                android:textSize="16dp"
                android:paddingTop="10dp"

                />

        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Number  : "
                android:textStyle="bold"
                android:textSize="16dp"
                android:padding="10dp"
             />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Number      "
                android:id="@+id/txt_driver_number"
                android:textSize="16dp"
                android:paddingTop="10dp"

                />

        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Seat   : "
                android:textStyle="bold"
                android:textSize="16dp"
                android:padding="10dp"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Seat   "
                android:id="@+id/txt_available_seat"
                android:textSize="16dp"
                android:paddingTop="10dp"
                />

        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:layout_marginTop="120dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination        : "
                android:textStyle="bold"
                android:textSize="16dp"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination  "
                android:id="@+id/txt_destination"
                android:textSize="16dp"
                android:paddingTop="10dp"
                />

        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:layout_marginTop="160dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date                    : "
                android:textStyle="bold"
                android:textSize="16dp"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date   "
                android:id="@+id/txt_date"
                android:textSize="16dp"
                android:paddingTop="10dp"
                />
       </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="240dp"
        android:background="#89c"
        android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height=" 80dp"
            android:text="Click to See Passenger List>>"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/btn_click"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

        </LinearLayout>
    </FrameLayout>

    </LinearLayout>

